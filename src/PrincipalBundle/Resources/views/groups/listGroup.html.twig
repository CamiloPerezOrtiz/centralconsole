{# Se evalua si existe un usuario que alla iniciado session, de lo contrario se redirecciona al login  #}
{% if app.user != null %}
    {# Se evalua que tipo de ussuario inicio sesion para cargar la plantilla correspondiente #}
    {% if app.user.role == "ROLE_SUPERUSER" or app.user.role == "ROLE_ADMIN" or app.user.role == "ROLE_USER" %}
        {% include '@Principal/templates/base.html.twig' %}
        {% block body %}
            <div class="content-wrapper">
                <div class="container-fluid">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{path('dashboard')}}">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">Groups list</li>
                    </ol>
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fa fa-table"></i>
                            Groups
                        </div>
                        <div class="card-body">
                            <div class="row">
                                {% for listaGrupo in grupo %}
                                    <div class="col-xl-3 col-sm-6 mb-3">
                                        <div class="card text-white bg-success o-hidden h-100">
                                            <div class="card-body">
                                                <div class="card-body-icon">
                                                    <i class="fa fa-fw fa-list"></i>
                                                </div>
                                                <div class="mr-5">{{ listaGrupo.cliente }}</div>
                                            </div>
                                            <a class="card-footer text-white btn-outline-dark clearfix small z-1" href="{{path('listGroupIp',{id:listaGrupo.cliente})}}">
                                                <span class="float-left">Show ips</span>
                                                <span class="float-right">
                                                    <i class="fa fa-angle-right"></i>
                                                </span>
                                            </a>
                                            {% if app.user.role == "ROLE_SUPERUSER" or app.user.role == "ROLE_ADMIN" %}
                                                <a class="card-footer text-white btn-outline-dark clearfix small z-1" href="{{path('registerUserAdministrator',{id:listaGrupo.cliente})}}">
                                                    <span class="float-left">Register an administrator</span>
                                                    <span class="float-right">
                                                        <i class="fa fa-angle-right"></i>
                                                    </span>
                                                </a>
                                                <a class="card-footer text-white btn-outline-dark clearfix small z-1" href="{{path('registerUser',{id:listaGrupo.cliente})}}">
                                                    <span class="float-left">Register an user</span>
                                                    <span class="float-right">
                                                        <i class="fa fa-angle-right"></i>
                                                    </span>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    {% else %}
        <script type="text/javascript">
            location.href ="{{path('login')}}";
        </script>
    {% endif %}
{% else %}
    <script type="text/javascript">
        location.href ="{{path('login')}}";
    </script>
{% endif %}