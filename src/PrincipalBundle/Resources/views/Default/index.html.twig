	<!DOCTYPE html>
	<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Login Warriors Lab's</title>
    	<!-- Hoja de estilos de bootstrap -->
        <link href="{{ asset ('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Hoja de estilos para los iconos del sistema -->
        <link href="{{ asset ('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <!-- Hoja de estilos del diseño del sistema -->
        <link href="{{ asset ('css/sb-admin.css') }}" rel="stylesheet">
        <link rel="icon" type="image/x-icon" href="{{ asset('log.ico') }}" />
    </head>
    <body class="bg-dark">
		<div class="container">
			<br>
			<div class="container">
				<img src="{{ asset ('img/logoWarriors.png') }}" class="img-fluid mx-auto d-block"> 
			</div>
			{% if error %}
				<div class="col-md-4 mx-auto ">
	      			<div class="alert alert-danger" aria-label="Close">
	                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	                    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
	                </div>
	            </div>
			{% endif %}
	    	<div class="card card-login mx-auto mt-5 text-center">
	      		<div class="card-header"><h3>Login</h3></div>
	      		<div class="card-body">
		        	<form action="{{path('login_check')}}" method="post" onsubmit="return validarLogin();">
		        		<!-- Inicio Email -->
			          		<div class="form-group">
			            		<label for="exampleInputEmail1">Email address</label>
			            		<input type="email" id="username" required="required" name="_username" placeholder="Enter your email" class="form-control"/>
			          		</div>
			          	<!-- Fin Email  -->
			          	<!-- Inicio Password  -->
			          		<div class="form-group">
			            		<label for="exampleInputPassword1">Password</label>
			            		<input type="password" id="password" required="required" placeholder="Enter your password" name="_password" class="form-control"/>
			          		</div>
			          	<!-- Fin password  -->
			          	<!-- Inicio Botones  -->
			          		<div class="form-group">
								<input type="submit" value="Enter" class="btn btn-primary btn-block"/>
								<input type="hidden" name="_target_path" value="/login"/>
							</div>
						<!-- Fin botones -->
		        	</form>
	      		</div>
	    	</div>
	  	</div>
	  	<footer class="footer-bottom">
            <div class="text-center">
                <p class="text-white">Warriors Lab's. All Rights Reserved.</p>
            </div>
	    </footer>
	    <!-- Javascript de bootstrap -->
	    <script src="{{ asset ('vendor/jquery/jquery.min.js') }}"></script>
	    <script src="{{ asset ('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	    <!-- Javascript de notificaciones personalizadas -->
	    <script src="{{ asset ('js/sweetalert.min.js') }}"></script>
	    {# Validacion de login #}<script src="{{ asset ('js/jsPagina/validarLogin.js') }}"></script>
	    {# Mensaje a pantalla para notificiar al usuario si hubo algun error #}<script>
	        window.setTimeout(function() {
	            $(".alert").fadeTo(500, 0).slideUp(500, function(){
	                $(this).remove(); 
	            });
	        }, 4000);
	    </script>
    </body>
	</html>
{% endif %}