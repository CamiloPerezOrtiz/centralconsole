{# Se evalua si hay un usuario que alla iniciado session, si existe se redirige al dashboard  #}
{# De lo contrario se craga el formulario para iniciar session #}
{% if app.user != null %}
    <META HTTP-EQUIV="Refresh" CONTENT="0; URL={{path('dashboard')}}">
{% else %}
