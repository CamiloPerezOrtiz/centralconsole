{# Se evalua si existe un usuario que alla iniciado session, de lo contrario se redirecciona al login  #}
{% if app.user != null %}
    {# Se evalua que tipo de ussuario inicio sesion para cargar la plantilla correspondiente #}
    {% if app.user.role == "ROLE_SUPERUSER" %}
        {% include '@Principal/templates/base.html.twig' %}
        {% block body %}
        	<div class="content-wrapper">
            	<div class="container-fluid">
              		<ol class="breadcrumb">
                		<li class="breadcrumb-item">
                  			<a href="{{path('dashboard')}}">Dashboard</a>
                		</li>
                        <li class="breadcrumb-item">
                            <a href="{{path('listUser')}}">list users</a>
                        </li>
                		<li class="breadcrumb-item active">User</li>
              		</ol>
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fa fa-table"></i>
                            Register a new user
                        </div>
                        <div class="card-body">
                  		    <div class="row">
                                <div class="container">
                                    <div class="container">
                                        <div class="col-md-11">
                                            {% for msg in app.session.flashbag().get('estatus') %}
                                                <div class="alert alert-danger" aria-label="Close">
                                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                    <strong>Danger!</strong> {{ msg }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="card card-register mx-auto mt-4">
                                        <div class="card-header">Register an Account</div>
                                        <div  class="card-body">
                                            {{ form_start(form, {'attr': {'onsubmit':'return validarRegistroUsuario();'} } ) }}
                                                <div class="form-group">
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            {{ form_label(form.name) }}
                                                            {{ form_widget(form.name) }}
                                                            <span class="text-danger">{{ form_errors(form.name) }}</span>
                                                        </div>
                                                        <div class="col-md-6">
                                                            {{ form_label(form.email) }}
                                                            {{ form_widget(form.email) }}
                                                            <span class="text-danger">{{ form_errors(form.email) }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.password) }}
                                                    {{ form_widget(form.password) }}
                                                    <span class="text-danger">{{ form_errors(form.password) }}</span>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.role) }}
                                                    {{ form_widget(form.role) }}
                                                    <span class="text-danger">{{ form_errors(form.role) }}</span>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_widget(form.Save) }}
                                                </div>
                                                <div class="text-center">
                                                    <button type="reset" class="btn btn-danger btn-block">Clean Form</button>
                                                </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset ('js/jsPagina/validarRegistroUsuario.js') }}"></script>
            <script>
                window.setTimeout(function() {
                    $(".alert").fadeTo(500, 0).slideUp(500, function(){
                        $(this).remove(); 
                    });
                }, 4000);
            </script>
        {% endblock %}
    {% else %}
        <script type="text/javascript">
            location.href ="{{path('login')}}";
        </script>
    {% endif %}
{% else %}
    <script type="text/javascript">
        location.href ="{{path('login')}}";
    </script>
{% endif %}